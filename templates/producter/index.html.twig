{% extends 'base.html.twig' %}

{% block title %}Nos partenaires - Mon P'tit Matin{% endblock %}

{% block content %}
    
    <div class="producter mt-5 mb-5">
    
        <h1 class="text-end mb-4">Nos partenaires</h1>

        {# Initialisation d'un compteur pour faire l'effet du gauche  droite #}
        {% set compteur = 0 %}

        {% for producter in producters %}

            {# Pour afficher a gauche une fois sur deux #}
            {% if compteur % 2 == 0 %}

            <div class="row featurette">
                <div class="col-md-7 order-md-2 text-center d-flex align-items-center">
                    <p>
                        {{ producter.description|raw }}
                    </p>
                </div>
                <div class="col-md-5 order-md-1 d-flex align-items-center justify-content-center">
                    <img src='/uploads/{{ producter.illustration }}' class="img-fluid" alt="Notre "{{compteur + 1}}" partenaire">  {# POURQUOI LE + 1 psq mon compteur a start a 0 #}    
                </div>
            </div>
            
            <hr class="featurette-divider">

            {% set compteur = compteur + 1  %}
            {# Et hop on affiche a droite #}
            {% elseif compteur % 2 != 0 %}
                
                
            <div class="row featurette">
                <div class="col-md-7 text-center d-flex align-items-center">
                    <p>
                        {{ producter.description|raw }}
                    </p>
                </div>
                <div class="col-md-5 d-flex align-items-center justify-content-center">
                    <img src='/uploads/{{ producter.illustration }}' class="img-fluid" alt="Notre "{{compteur + 1}}"ème partenaire">       
                </div>
            </div>

            <hr class="featurette-divider">
                {# Incrémentation #}
            {% set compteur = compteur + 1 %} 
            
            {% endif %}
            

        {% endfor %}

        
{% endblock %}
